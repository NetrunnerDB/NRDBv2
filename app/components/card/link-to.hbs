{{#if this.printing.isPending}}
  LOADING...
{{else}}
  <LinkTo @route="page.card" @model={{this.printing.id}} ...attributes>
    {{yield}}
    {{#unless @hideTooltip}}
      <Tippy @placement="auto" @theme="light-border">
        <Card::TextBox
          @printing={{this.printing}}
          @showTitle={{true}}
          @showThumbnail={{true}}
        />
      </Tippy>
    {{/unless}}
  </LinkTo>
{{/if}}