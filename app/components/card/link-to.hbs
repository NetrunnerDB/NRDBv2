{{#if this.printing.isPending}}
  LOADING...
{{else}}
  <LinkTo @route="page.card" @model={{this.printing.id}} ...attributes>
    {{yield}}
    <Tippy @placement="auto" @theme="light-border" as |tippy|>
      <Card::TextBox
        @printing={{this.printing}}
        @showTitle={{true}}
        @showThumbnail={{true}}
      />
    </Tippy>
  </LinkTo>
{{/if}}