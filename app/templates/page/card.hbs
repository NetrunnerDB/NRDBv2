{{page-title @model.printing.title}}

<div class="container">
  <div class="row">
    <div class="col-6 col-xl-2 d-flex order-xl-0 flex-column my-2">
      {{#if (and @model.previousPrinting (not-eq @model.printing @model.previousPrinting))}}
        <Card::LinkTo
          @printing={{@model.previousPrinting}}
          class="btn btn-light text-decoration-none text-truncate"
        >
          <FaIcon @icon="left-long" />
          {{@model.previousPrinting.title}}
        </Card::LinkTo>
      {{/if}}
    </div>
    <div class="col-6 col-xl-2 d-flex order-xl-2 flex-column my-2">
      {{#if (and @model.nextPrinting (not-eq @model.printing @model.nextPrinting))}}
        <Card::LinkTo
          @printing={{@model.nextPrinting}}
          class="btn btn-light text-decoration-none text-truncate"
        >
          {{@model.nextPrinting.title}}
          <FaIcon @icon="right-long" />
        </Card::LinkTo>
      {{/if}}
    </div>

    <div class="col-xl-8 d-flex order-xl-1 flex-column my-2">
      <Card::FullDisplay @faction={{@model.faction}} @cardSet={{@model.cardSet}} @cardType={{@model.cardType}} @printing={{@model.printing}} @otherPrintings={{@model.otherPrintings}} @eternalSnapshot={{@model.eternalSnapshot}} @standardSnapshot={{@model.standardSnapshot}} @startupSnapshot={{@model.startupSnapshot}} @showPrintings={{true}} @showLegality={{true}} />
    </div>

    <div class="col-12 d-flex order-xl-3 flex-column my-2">
      <Card::Community @card={{@model.card}} @rulings={{@model.rulings}}/>
    </div>
  </div>
</div>
